<!doctype html>
@using Microsoft.AspNetCore.Http;
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link href="~/img/Favicon.svg" rel="icon" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/SigninSignup/css/style.css">

    @{ Layout = null; }
</head>
<body>
    @if (null != TempData["alertMessage"])
    {
        <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', function () {
                document.getElementById('errorMessage').textContent = '@Html.Raw(TempData["alertMessage"].ToString())';
                document.getElementById('errorMessage').style.display = 'block';
            });
        </script>
    }
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Welcome To HSH Company</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Sign Up</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                </p>
                            </div>
                        </div>
                        <form method="post" asp-controller="SigninSignup" asp-action="Signup" class="login-form">
                            <div class="form-group">
                                <b>Username</b><input name="Username" type="text" class="form-control rounded-left" placeholder="Username" style="text-align: center" required>
                            </div>
                            <div class="form-group">
                                <b>Password</b><input name="Password" type="text" class="form-control rounded-left" placeholder="Password" style="text-align: center" required>
                            </div>
                            <div class="form-group">
                                <b>Full Name</b><input name="HoTen" type="text" class="form-control rounded-left" placeholder="FullName" style="text-align: center" required>
                            </div>
                            <div class="form-group">
                                <b>Address</b><input name="DiaChi" type="text" class="form-control rounded-left" placeholder="Address" style="text-align: center" required>
                            </div>
                            <div class="form-group">
                                <b>Indentity Card Number</b><input name="CMND" type="text" class="form-control rounded-left" placeholder="Identity Card Number" style="text-align: center" required>
                            </div>
                            <div class="form-group">
                                <b>Year Of Birth</b><input name="NamSinh" type="text" class="form-control rounded-left" placeholder="Year Of Birth" style="text-align: center" required>
                            </div>
                            <div class="form-group">
                                <b>Phone Number</b><input name="SoDienThoai" type="text" class="form-control rounded-left" placeholder="Phone Number" style="text-align: center" required>
                            </div>
                            <div class="form-group">
                                <b>Email</b><input name="Email" type="text" class="form-control rounded-left" placeholder="Email" style="text-align: center" required>
                            </div>
                            <!-- Display error message below the password input -->
                            <span id="errorMessage" class="text-danger" style="display:none; text-align: center;"></span>
                            <div class="form-group d-flex align-items-center">
                                <div class="d-flex justify-content-end" style="margin-left: 125px">
                                    <button type="submit" class="btn btn-primary rounded submit">Signup</button>
                                </div>
                            </div>
                            <div class="form-group mt-4">
                                <div class="w-100 text-center">
                                    <p class="mb-1">Already have an account? <a href="@Url.Action("Signin", "SigninSignup")">Login</a></p>
                                </div>
                            </div>
                            <br />
                            <div>
                                <div class="w-100 text-center">
                                    <a href="@Url.Action("Index", "Home" )">Back to Home</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/LoginSignup/js/jquery.min.js"></script>
    <script src="~/LoginSignup/js/bootstrap.min.js"></script>

</body>
</html>


