@*View hiển thị xe chưa bán trong Admin*@
@using PTUDW_CTS_QuanLyBanXeOto.Areas.Admin.Models
@model IList<CarManage>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Car Not Sold Yet</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
                <li><a href="/Admin/CarManage/Add" class="btn btn-primary btn-sm" style="margin-left: 800px; color: black" title="Thêm">Add</a></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>VIN</th>
                    <th>Tên Hãng Xe</th>
                    <th>Tên Dòng Xe</th>
                    <th>Đời Xe</th>
                    <th>Màu Sắc</th>
                    <th>Động Cơ</th>
                    <th>Ngày Nhập</th>
                    <th>Người Nhập</th>
                    <th>Giá Nhập</th>
                    <th>Giá Bán</th>
                    <th>Trạng Thái</th>
                    <th>Chức Năng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cm in Model)
                {
                <tr>
                    <td>@cm.VIN</td>
                    <td>@cm.TenHangXe</td>
                    <td>@cm.TenDongXe</td>
                    <td>@cm.DoiXe</td>
                    <td>@cm.MauSac</td>
                    <td>@cm.DongCo</td>
                    <td>@cm.NgayNhap</td>
                    <td>@cm.Username</td>
                    <td>@cm.GiaNhap.ToString("N0") VNĐ</td>
                    <td>@cm.GiaBan.ToString("N0") VNĐ</td>
                    <td>@cm.TrangThai</td>
                    <td>
                        <a method="get" asp-area="Admin" asp-controller="CarManage" asp-action="Edit" asp-route-id="@cm.CarID" class="btn btn-primary btn-sm" title="Sửa"><i class="bi bi-pencil"></i></a>
                        <a method="get" asp-area="Admin" asp-controller="CarManage" asp-action="Delete" asp-route-id="@cm.CarID" class="btn btn-danger btn-sm" title="Xóa"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
                }
            <tbody>
        </table>
    </div>
</main>
