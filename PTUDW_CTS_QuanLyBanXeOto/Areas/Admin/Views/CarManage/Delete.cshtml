@using PTUDW_CTS_QuanLyBanXeOto.Areas.Admin.Models
@model CarManage
@using Microsoft.AspNetCore.Http;
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.26.0/moment.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>

<main id="main" class="main">
    <div class="pagetitle">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <form method="post" asp-area="Admin" asp-controller="CarManage" asp-action="Delete" asp-route-id="@Model.CarID" class="login-form">
                        <div class="form-group">
                            <b>VIN</b><input name="VIN" type="text" class="form-control rounded-left" value="@Model.VIN" style="text-align: center" autocomplete="off" readonly>
                        </div>
                        <div class="form-group">
                            <b>Hãng Xe</b><input name="TenHangXe" type="text" class="form-control rounded-left" value="@Model.TenHangXe" style="text-align: center" autocomplete="off" readonly>
                        </div>
                        <div class="form-group">
                            <b>Dòng Xe</b><input name="TenDongXe" type="text" class="form-control rounded-left" value="@Model.TenDongXe" style="text-align: center" autocomplete="off" readonly>
                        </div>
                        <div class="form-group">
                            <b>Đời Xe</b><input name="DoiXe" type="number" class="form-control rounded-left" value="@Model.DoiXe" style="text-align: center" autocomplete="off" readonly>
                        </div>
                        <div class="form-group">
                            <b>Màu Sắc</b><input name="MauSac" type="text" class="form-control rounded-left" value="@Model.MauSac" style="text-align: center" autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <b>Động Cơ</b><input name="DongCo" type="text" class="form-control rounded-left" value="@Model.DongCo" style="text-align: center" autocomplete="off" readonly>
                        </div>
                        <div class="form-group">
                            <b>Ngày Nhập</b><input id="NgayNhap" name="NgayNhap" type="text" class="form-control rounded-left" value="@Model.NgayNhap" style="text-align: center" autocomplete="off" readonly>
                        </div>
                        <div class="form-group">
                            <b>Người Nhập</b><input name="HoTenNguoiNhap" type="text" value="@Model.Username" class="form-control rounded-left" style="text-align: center" readonly>
                        </div>
                        <div class="form-group d-flex align-items-center" style="justify-content: center; margin-top: 15px">
                            <button type="submit" class="btn btn-danger rounded submit">Xác Nhận Xóa</button>
                        </div>
                        <div class="form-group mt-4">
                            <div class="w-100 text-center">
                                <p class="mb-1"><a href='/Admin/CarManage/XeChuaBan'>Hủy</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>