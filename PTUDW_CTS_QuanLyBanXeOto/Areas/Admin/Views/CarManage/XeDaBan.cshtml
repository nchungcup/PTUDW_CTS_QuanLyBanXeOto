@*View hiển thị xe đã bán trong Admin*@
@using PTUDW_CTS_QuanLyBanXeOto.Areas.Admin.Models
@model IList<CarManage>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Car Sold</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home" )">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>VIN</th>
                    <th>Tên Hãng Xe</th>
                    <th>Tên Dòng Xe</th>
                    <th>Đời Xe</th>
                    <th>Màu Sắc</th>
                    <th>Động Cơ</th>
                    <th>Giá Nhập</th>
                    <th>Giá Bán</th>
                    <th>Ngày Nhập</th>
                    <th>Người Nhập</th>
                    <th>Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cm in Model)
                {
                    <tr>
                        <td>@cm.VIN</td>
                        <td>@cm.TenHangXe</td>
                        <td>@cm.TenDongXe</td>
                        <td>@cm.DoiXe</td>
                        <td>@cm.MauSac</td>
                        <td>@cm.DongCo</td>
                        <td>@cm.GiaNhap.ToString("N0") VNĐ</td>
                        <td>@cm.GiaBan.ToString("N0") VNĐ</td>
                        <td>@cm.NgayNhap</td>
                        <td>@cm.Username</td>
                        <td>@cm.TrangThai</td>
                    </tr>
                }
            <tbody>
        </table>
    </div>

</main><!-- End #main -->